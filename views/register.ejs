<% layout("../layout/boilerplate") -%>

  <body>
    


    <div class="fcontainer">
      <div class="f-form">
        <h2>Create an Account</h2>
        <p class="f-login">Already have an account? <a href="/login">Log in</a></p>

        <form action="/register" method="post">
          <input type="text" name="name" placeholder=" Your Name" required><br>
          <input type="text" name="phone" placeholder="Mobile Number" required><br>
          <input type="email" name="email" placeholder="Email" required><br>
          <input type="password" name="password" placeholder="Enter your password" required><br>
          <input type="password" name="confirmPassword" placeholder="Confirm your password" required><br>
          <input type="number" name="sem" placeholder="Semester" required><br>
          <input type="text" name="branch" placeholder="Branch" required><br>
          <button type="submit" class="btn btn-success">Create Account</button>
        </form>
      </div>
    </div>
